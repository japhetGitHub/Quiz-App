  <!-- Custom JS -->
  <script type="text/javascript" src="/scripts/create_quiz.js"></script>

  <title>Create Quiz Page</title>
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/_header') %>

    <section class="mt-2 mx-2 justify-content-center">
      <div class="card">

        <div class="card-header">
          <h1 class="card-title text-center">Create a Quiz</h1>
        </div>

        <div class="card-body">
          <form action="" id="quizTitle" class="my-5">
            <label class="form-label h3" for="quizTitle">Quiz Title</label>
            <input class="form-control mt-2" name="quizTitle" id="quizTitle" placeholder="Quiz Title">
            <div class="col d-block mt-2">
              <button class="btn btn-outline-light" id="btn-quiz-title" type="submit">Submit</button>
            </div>
          </form>
        </div>

      </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"></script>
</body>

</html>
