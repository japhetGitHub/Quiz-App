<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.0/css/all.min.css"
    integrity="sha512-gRH0EcIcYBFkQTnbpO8k0WlsD20x5VzjhOA1Og8+ZUAhcMUCvd+APD35FJw3GzHAP3e+mP28YcDJxVr745loHw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Default CSS Normalization -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/quiz.css" type="text/css" />


  <!-- JQuery -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- Custom JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/question.js"></script>

  <title>Home Page</title>
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/_header') %>

    <section id="questions-container">
      <% console.log("this is quiz: ", quiz) %>
      <form id="choice-submit" method="POST" action="/quiz/:id">
      <% for (const question of quiz) { %>
        <article id="question-choices" class="questionchoices" data-id= "<%=question.id%>">
          <div class="question">
            <span>
              <%= question.question %>
            </span>
          </div>
            <div class="choices">
              <button id="btn1" type="submit">Choice 1: <%= question.choice_1 %></button>
              <button id="btn2" type="submit">Choice 2: <%= question.choice_2 %></button>
              <button id="btn3" type="submit">Choice 3: <%= question.choice_3 %></button>
              <button id="btn4" type="submit">Choice 4: <%= question.choice_4 %></button>
            </div>
        </article>
      <% } %>
      </form>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"></script>
</body>

</html>
